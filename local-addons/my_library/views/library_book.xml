              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->
        <menuitem name="My Library" id="my_library.menu_root"/> <!-- id="library_base_menu" -->
        <!-- menu categories -->
        <menuitem name="Books" id="my_library.menu_book" parent="my_library.menu_root" action="my_library.act_window"/>  <!-- id="library_book_menu" -->
        <!-- actions -->
